{
  "name": "pagelive",
  "version": "3.3.0",
  "description": "Screen reader companion for Gemini, Grok, Claude",
  "scripts": {
    "dev": "vite",
    "build:watch": "NODE_ENV=development vite build --watch",
    "build": "pnpm gemini:build && pnpm grok:build",
    "gemini:build": "vite build --config config/vite.config.gemini.ts",
    "gemini:build:watch": "NODE_ENV=development vite build --config config/vite.config.gemini.ts --watch",
    "grok:build": "vite build --config config/vite.config.grok.ts ",
    "grok:build:watch": "NODE_ENV=development vite build --config config/vite.config.grok.ts --watch",
    "claude:build": "vite build --config config/vite.config.claude.ts ",
    "claude:build:watch": "NODE_ENV=development vite build --config config/vite.config.claude.ts --watch",
    "watch:dist:wrap": "node ./scripts/watch-dist-wrap.js",
    "test": "tsx --test"
  },
  "devDependencies": {
    "@types/node": "^24.6.2",
    "hot-reload-extension-vite": "^1.0.13",
    "puppeteer": "^24.23.0",
    "tsx": "^4.20.6",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  }
}