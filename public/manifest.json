{
  "manifest_version": 3,
  "name": "PageLive",
  "version": "3.3.0",
  "description": "Screen Reader companion for Gemini, Grok, Claude",
  "permissions": [],
  "host_permissions": [
    "https://gemini.google.com/*",
    "https://grok.com/*",
    "https://claude.ai/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://gemini.google.com/",
        "https://gemini.google.com/app/*"
      ],
      "js": [
        "content-scripts/gemini.js"
      ],
      "css": [
        "assets/pagelive.css"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://grok.com/*"
      ],
      "js": [
        "content-scripts/grok.js"
      ],
      "css": [
        "assets/pagelive.css"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://claude.ai/*"
      ],
      "js": [
        "content-scripts/claude.js"
      ],
      "css": [
        "assets/pagelive.css"
      ],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "pagelive-16.png",
    "48": "pagelive-48.png",
    "128": "pagelive-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "pagelive.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}