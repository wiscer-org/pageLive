{
  "manifest_version": 3,
  "name": "PageLive",
  "version": "2.1.1",
  "description": "Screen Reader companion for Gemini AI",
  "permissions": [],
  "host_permissions": [
    "https://gemini.google.com/app/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://gemini.google.com/app/*"
      ],
      "js": [
        "content-scripts/pagelive.js",
        "content-scripts/gemini.js"
      ],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "pagelive-16.png",
    "48": "pagelive-48.png",
    "128": "pagelive-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "pagelive.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}