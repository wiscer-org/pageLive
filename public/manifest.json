{
  "manifest_version": 3,
  "name": "PageLive",
  "version": "2.1.0",
  "description": "Screen Reader companion for Gemini AI",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://gemini.google.com/*"
      ],
      "js": [
        "content-scripts/pagelive.js",
        "content-scripts/gemini.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://x.ai/*"
      ],
      "js": [
        "content-scripts/pagelive.js",
        "content-scripts/xai.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "pagelive.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}